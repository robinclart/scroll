<%= component_form_for renderable do |f| %>
  <div>
    <% if renderable.image.present? %>
      <%= image_tag(renderable.image.url(:thumb)) %><br>
    <% end %>
    <%= f.file_field :image %>
  </div>

  <div>
    <%= f.label :caption %><br>
    <%= f.text_area :caption, rows: 3 %>
  </div>

  <div>
    <%= f.label :style, "CSS class names" %><br>
    <%= f.text_field :style %>
  </div>

  <div>
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>

  <div>
    <%= f.submit class: "Button" %>
  </div>
<% end %>
